{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "dist/js",
    "sourceMap": true,
    "target": "es5",
    "types": ["chrome", "vitest/globals"]
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules"]
}
